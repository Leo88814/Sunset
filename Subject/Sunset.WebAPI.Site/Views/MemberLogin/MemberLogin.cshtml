
@{
    ViewBag.Title = "會員登入";
}

<head>
    <title>會員登入</title>
    <style>
        .row {
            justify-content: center;
        }
    </style>
</head>
<body>
    <div id="app" class="page-container">
        <main class="content-wrap">
            <div class="container">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb"><a href="@Url.Action("index", "Home")">首頁</a></li>
                        <li class="breadcrumb active">會員登入</li>
                    </ol>
                </nav>

                <div class="row">
                    <div class="col-sm-8">
                        <form v-on:submit.prevent="handleSubmit"
                              class="mx-auto"
                              style="max-width: 650px">
                            <h3 class="mt-5">會員登入</h3>
                            <div class="mt-5">
                                <label for="email">電子信箱:</label>
                                <input type="email"
                                       id="email"
                                       v-model="email"
                                       class="form-control"
                                       placeholder="請輸入電子信箱"
                                       required
                                       autocomplete="username" />
                            </div>

                            <div class="mt-3">
                                <label for="password">密碼:</label>
                                <input type="password"
                                       id="password"
                                       v-model="password"
                                       class="form-control"
                                       placeholder="請輸入密碼"
                                       required
                                       autocomplete="current-password" />
                            </div>
                            <div class="d-flex justify-content-end">

                                <div class="mt-3 text-center">
                                    <a href="#" v-on:click.prevent="forgotPassword">忘記密碼</a> |
                                    <a href="#" v-on:click.prevent="register">註冊</a>
                                </div>

                            </div>
                            <div class="mt-3 text-end">
                                <button type="submit" class="btn btn-primary">登入</button>
                            </div>
                            <p v-if="message"
                               :class="{'text-success': isSuccess, 'text-danger': !isSuccess}"
                               class="mt-3 text-center">
                                {{ message }}
                            </p>
                        </form>
                    </div>
                </div>
            </div>
        </main>
    </div>

    @section scripts{
        <script>
            const { ref, createApp } = Vue;

            const config = {
                setup() {
                    const email = ref("");
                    const password = ref("");
                    const message = ref("");
                    const isSuccess = ref(false);

                    // 處理表單提交
                    const handleSubmit = async () => {
                        try {
                            const response = await fetch("/api/LoginApi", {
                                method: "POST",
                                headers: {
                                    "Content-Type": "application/json",
                                },
                                body: JSON.stringify({
                                    email: email.value,
                                    password: password.value,
                                }),
                            });

                            const data = await response.json();

                            if (response.ok) {
                                message.value = "登入成功！正在跳轉...";
                                isSuccess.value = true;
                                // 可根據後台回應進行跳轉，例如：
                                setTimeout(() => {
                                    window.location.href = "@Url.Action("index", "Home")"; // 登入成功後跳轉頁面
                                }, 1000);
                            } else {
                                message.value = data.error || "登入失敗，請檢查帳號密碼。";
                                isSuccess.value = false;
                            }
                        } catch (error) {
                            message.value = "發生錯誤，請稍後再試。";
                            isSuccess.value = false;
                            console.error("登入錯誤:", error);
                        }
                    };

                    // 處理忘記密碼
                    const forgotPassword = () => {
                        window.location.href = ""; // 跳轉到忘記密碼頁面
                    };

                    // 處理註冊
                    const register = () => {
                        window.location.href = "/MemberLogin/Register"; // 跳轉到註冊頁面
                    };

                    return {
                        email,
                        password,
                        message,
                        isSuccess,
                        handleSubmit,
                        forgotPassword,
                        register,
                    };
                },
            };
            const app = createApp(config);
            app.mount("#app");
        </script>
    }
</body>

